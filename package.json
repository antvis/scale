{
  "name": "@antv/scale",
  "version": "0.4.0",
  "description": "Scale for visualization, used in G2 and others.",
  "author": "https://github.com/orgs/antvis/people",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "esm"
  ],
  "scripts": {
    "clean": "rimraf -rf lib esm dist",
    "lint-staged": "lint-staged",
    "test": "jest",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build": "npm run build:cjs && npm run build:esm",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "antv",
    "visualization",
    "scale"
  ],
  "dependencies": {
    "@antv/util": "^2.0.13",
    "fecha": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@types/jest": "^26.0.20",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "testRegex": "/__tests__/.*-spec\\.ts?$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/scale.git"
  }
}
